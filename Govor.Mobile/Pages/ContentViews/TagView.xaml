<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Govor.Mobile.Pages.ContentViews.TagView">
    <Grid>
        <!-- Сам тег -->
        <Border
            x:Name="TagBody"
            Padding="6,1"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 6"
            IsVisible="{Binding ., Converter={StaticResource NullToBoolConverter}}"
            Background="{Binding BodyColor}"
            Stroke="{Binding StrokeColor}"
            Shadow="{Binding CustomShadow}">
            
            
            <HorizontalStackLayout Spacing="4" VerticalOptions="Center">
                <!-- Иконка -->
                <Image
                    Source="{Binding Icon}"
                    WidthRequest="14"
                    HeightRequest="14"
                    VerticalOptions="Center"
                    IsVisible="{Binding Icon, Converter={StaticResource NullToBoolConverter}}" />

                <!-- Текст -->
                <Label
                    Text="{Binding Text}"
                    FontSize="14"
                    FontAttributes="Bold"
                    TextColor="{Binding TextColor}"
                    IsVisible="{Binding Text, Converter={StaticResource NullToBoolConverter}}"
                    VerticalTextAlignment="Center"/>
            </HorizontalStackLayout>
            
          
        </Border>

        <!-- Tooltip -->
        <Border
            x:Name="Tooltip"
            IsVisible="False"
            Padding="8,4"
            StrokeShape="RoundRectangle 6"
            BackgroundColor="#CC1E1E1E"
            TranslationY="-36"
            Opacity="0">

            <Label
                Text="{Binding Description}"
                FontSize="11"
                TextColor="White"
                LineBreakMode="WordWrap"/>
        </Border>

    </Grid>
</ContentView>