<maui:PopupPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maui="clr-namespace:UXDivers.Popups.Maui;assembly=UXDivers.Popups.Maui"
    xmlns:buttons="http://schemas.syncfusion.com/maui/toolkit"
    xmlns:contentViews="clr-namespace:Govor.Mobile.Pages.ContentViews"
    xmlns:sho="http://sharpnado.com"
    xmlns:markdown="clr-namespace:Indiko.Maui.Controls.Markdown;assembly=Indiko.Maui.Controls.Markdown"
    x:Class="Govor.Mobile.Pages.ContentViews.UserIncomingFriendPopup"
    AppearingAnimation="{maui:FadeInPopupAnimation Duration=300}"
    DisappearingAnimation="{maui:FadeOutPopupAnimation Duration=300}"
    BackgroundColor="{DynamicResource PopupBackdropColor}"
    Padding="{OnPlatform iOS='0,30,0,0', Android='10', WinUI='100'}"
    CloseWhenBackgroundIsClicked="True">

    <Border
        x:Name="InfoPanel"
        HeightRequest="520"
        MinimumWidthRequest="380"
        StrokeThickness="0"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Background="Transparent">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="28" />
        </Border.StrokeShape>

        <Grid>
            <Image
                Source="{Binding Avatar.AvatarImage}"
                IsVisible="{Binding Avatar.HasImage}"
                Aspect="Fill"
                HorizontalOptions="Fill"
                VerticalOptions="Fill" />

            <Grid Background="{Binding Avatar.AvatarBackgroundColor}"
                  IsVisible="{Binding Avatar.HasImage, Converter={StaticResource BoolInvertor}}"
                  HorizontalOptions="Fill"
                  VerticalOptions="Fill">

                <Label Text="{Binding Avatar.AvatarText}"
                       FontSize="120"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,-150, 0, 0"
                       VerticalOptions="Center" />
            </Grid>

            <BoxView VerticalOptions="Fill" HorizontalOptions="Fill">
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Transparent" Offset="0.5" />
                        <GradientStop Color="#CC000000" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <Border
                WidthRequest="36"
                HeightRequest="36"
                Background="#40000000"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                StrokeThickness="0"
                Margin="16">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18" />
                </Border.StrokeShape>

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCloseTapped" />
                </Border.GestureRecognizers>

                <Label Text="✕"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Border>
            
            <Border
                VerticalOptions="End"
                HorizontalOptions="Fill"
                StrokeThickness="0"
                Margin="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0, 0, 20, 20" />
                </Border.StrokeShape>

                <Border.Background>
                    <SolidColorBrush Color="#991c1c1e" />
                </Border.Background>
                
                <sho:MaterialFrame
                    MaterialTheme="AcrylicBlur"
                    MaterialBlurStyle="Dark"
                    AndroidBlurRadius="10"
                    WinUIHostBackdropBlur="True"
                    CornerRadius="3"
                    Padding="20,24,20,24"
                    Elevation="8">
                    <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="12">
                        <VerticalStackLayout VerticalOptions="Center" Spacing="8">
                            <Label
                                Text="Заявка в друзья от"
                                FontSize="24"
                                FontAttributes="Bold"
                                TextColor="White"
                                VerticalOptions="Center" />
                            
                            <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                                <Label
                                    Text="{Binding Title}"
                                    FontSize="22"
                                    FontAttributes="Bold"
                                    TextColor="White"
                                    VerticalOptions="Center" />

                                <contentViews:TagView
                                    BindingContext="{Binding Tag}"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                        
                        <BoxView
                            Grid.Row="1"
                            HeightRequest="1"
                            HorizontalOptions="Fill"
                            Margin="0,2"
                            Color="#90FFFFFF" />
                        
                        <!-- Контент Markdown -->
                        <ScrollView Grid.Row="2"
                                    VerticalOptions="Fill"
                                    HeightRequest="200">
                            <markdown:MarkdownView MarkdownText="{Binding Subtitle}" 
                                                   Style="{StaticResource DefaultMarkdownStyle}"
                            />
                        </ScrollView>
                        
                        <HorizontalStackLayout Grid.Row="3" Spacing="10" HorizontalOptions="Center">
                            <buttons:SfButton
                                Text="Отклонить"
                                TextColor="Black"
                                FontSize="16"
                                HeightRequest="50"
                                CornerRadius="25"
                                FontAttributes="Bold"
                                HorizontalOptions="Fill"
                                Background="White"
                                Opacity="0.8"
                                Command="{Binding RejectFriendshipCommand}"
                                Margin="0,10,0,0" />
                            
                            <buttons:SfButton
                                Text="Принять"
                                TextColor="Black"
                                FontSize="16"
                                HeightRequest="50"
                                CornerRadius="25"
                                FontAttributes="Bold"
                                HorizontalOptions="Fill"
                                Background="White"
                                Command="{Binding AcceptFriendshipCommand}"
                                Margin="0,10,0,0" />
                            
                        </HorizontalStackLayout>
                        
                    </Grid>
                </sho:MaterialFrame>
            </Border>
        </Grid>
    </Border>
</maui:PopupPage>