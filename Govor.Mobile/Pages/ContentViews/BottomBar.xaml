<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Govor.Mobile.Pages.ContentViews.BottomBar"
             HeightRequest="45"
             Margin="16,0,16,5">
    <Border
        IsVisible="False"
        x:Name="BottomNavigationBar"
        Background="#20ffffff"
        StrokeShape="RoundRectangle 20"
        StrokeThickness="1">
        <Grid ColumnDefinitions="*,*,*">

            <ImageButton Grid.Column="0" Source="chat_icon.png"
                         Command="{Binding OpenChatsCommand}" />

            <ImageButton Grid.Column="1" Source="friends_icon.png"
                         Command="{Binding OpenFriendsCommand}" />

            <ImageButton Grid.Column="2" Source="call_icon.png"
                         Command="{Binding OpenCallsCommand}" />

        </Grid>
        <Border.Shadow>
            <Shadow Brush="#886A5ACD" Offset="1,3" Radius="2" Opacity="0.6" />
        </Border.Shadow>
    </Border>
</ContentView>