<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Govor.Mobile.ContentViews.ImagePreviewView"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundColor="#5A314BA4"
             >
    
    <Grid RowDefinitions="*,Auto">

        <!-- Image container required for zoom/pan -->
        <Grid x:Name="ImageContainer"
              VerticalOptions="Center"
              HorizontalOptions="Center">

            <Image x:Name="PreviewImage"
                   Aspect="AspectFit"
                   />
        </Grid>


        <!-- Control buttons -->
        <HorizontalStackLayout Grid.Row="1"
                               Padding="15"
                               Spacing="20"
                               HorizontalOptions="Center">

            <sf:SfButton Text="⟳ Повернуть"
                         Clicked="RotateClicked"
                         Background="#00FFFFFF"
                         BackgroundColor="#333" TextColor="White" />
            
            <sf:SfButton Text="Сохранить"
                         Clicked="SaveClicked"
                         Background="#00FFFFFF"
                         BackgroundColor="#333" TextColor="White" />
        </HorizontalStackLayout>

    </Grid>
</toolkit:Popup>