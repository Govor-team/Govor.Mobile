<maui:PopupPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maui="clr-namespace:UXDivers.Popups.Maui;assembly=UXDivers.Popups.Maui"
    xmlns:buttons="http://schemas.syncfusion.com/maui/toolkit"
    xmlns:contentViews="clr-namespace:Govor.Mobile.Pages.ContentViews"
    xmlns:sho="http://sharpnado.com"
    xmlns:markdown="clr-namespace:Indiko.Maui.Controls.Markdown;assembly=Indiko.Maui.Controls.Markdown"
    AppearingAnimation="{maui:FadeInPopupAnimation Duration=300}"
    DisappearingAnimation="{maui:FadeOutPopupAnimation Duration=300}"
    x:Class="Govor.Mobile.Pages.ContentViews.UserAddNewFriendPopup"
    BackgroundColor="{DynamicResource PopupBackdropColor}"
    Padding="{OnPlatform iOS='0,30,0,0', Android='10', WinUI='100'}"
    CloseWhenBackgroundIsClicked="True">

    <Border
        x:Name="InfoPanel"
        HeightRequest="520"
        MinimumWidthRequest="380"
        StrokeThickness="0"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        BackgroundColor="Transparent"
        Background="Transparent">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="28" />
        </Border.StrokeShape>

        <Grid>
            <Image
                Source="{Binding Avatar.AvatarImage}"
                IsVisible="{Binding Avatar.HasImage}"
                Aspect="Fill"
                HorizontalOptions="Fill"
                VerticalOptions="Fill" />

            <Grid Background="{Binding Avatar.AvatarBackgroundColor}"
                  IsVisible="{Binding Avatar.HasImage, Converter={StaticResource BoolInvertor}}"
                  HorizontalOptions="Fill"
                  VerticalOptions="Fill">

                <Label Text="{Binding Avatar.AvatarText}"
                       FontSize="120"
                       TextColor="White"
                       FontAttributes="Bold"
                       FontFamily="CirilicOld"
                       HorizontalOptions="Center"
                       Margin="0,-150, 0, 0"
                       VerticalOptions="Center" />
            </Grid>

            <BoxView VerticalOptions="Fill" HorizontalOptions="Fill">
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Transparent" Offset="0.5" />
                        <GradientStop Color="#CC000000" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <Border
                    WidthRequest="36"
                    HeightRequest="36"
                    Background="#40000000"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    StrokeThickness="0"
                    ZIndex="1"
                    Margin="16">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18" />
                </Border.StrokeShape>

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCloseTapped" />
                </Border.GestureRecognizers>

                <Label Text="✕"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Border>
            
            <Border
                VerticalOptions="End"
                HorizontalOptions="Fill"
                StrokeThickness="0"
                Padding="20,24,20,24"
                Margin="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0, 0, 20, 20" />
                </Border.StrokeShape>

                <Border.Background>
                    <SolidColorBrush Color="#991c1c1e" />
                </Border.Background>

                <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="12">

                    <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                        <Label
                                    Text="{Binding Title}"
                                    FontSize="24"
                                    FontFamily="CirilicOld"
                                    FontAttributes="Bold"
                                    TextColor="White"
                                    VerticalOptions="Center" />

                        <contentViews:TagView
                                BindingContext="{Binding Tag}"
                                VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <BoxView
                            Grid.Row="1"
                            HeightRequest="1"
                            HorizontalOptions="Fill"
                            Margin="0,2"
                            Color="#90FFFFFF" />

                    <!-- Контент Markdown -->
                    <ScrollView Grid.Row="2"
                                    VerticalOptions="Fill"
                                    HeightRequest="200">
                        <markdown:MarkdownView MarkdownText="{Binding Subtitle}" 
                                                   Style="{StaticResource DefaultMarkdownStyle}"
                            />
                    </ScrollView>

                    <Label
                            Grid.Row="1"
                            IsVisible="False"
                            Text="{Binding Subtitle}"
                            FontSize="14"
                            TextColor="#D0FFFFFF"
                            LineHeight="1.2"
                            LineBreakMode="WordWrap" />

                    <buttons:SfButton
                            Grid.Row="3"
                            Text="Добавить в друзья +"
                            TextColor="Black"
                            FontSize="16"
                            HeightRequest="50"
                            CornerRadius="25"
                            FontAttributes="Bold"
                            HorizontalOptions="Fill"
                            Background="White"
                            Command="{Binding SendFriendshipCommand}"
                            Margin="0,10,0,0" />
                </Grid>
            </Border>

        </Grid>
    </Border>
</maui:PopupPage>