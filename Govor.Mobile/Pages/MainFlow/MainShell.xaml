<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Govor.Mobile.Pages.MainFlow.MainShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Govor.Mobile.Pages.MainFlow"
    Title="Main"
    Shell.FlyoutBehavior="Flyout"
    BackgroundImageSource="{AppThemeBinding Dark=background_girls.png, Light=background_flag.png}"
    Shell.NavBarVisibilityAnimationEnabled="False"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Главная"
        Route="MainPage"
        ContentTemplate="{DataTemplate pages:MainPage}" />
    
    <ShellContent 
        Title="Друзья"
        Route="FriendsSearchPage"
        ContentTemplate="{DataTemplate pages:FriendsSearchPage}"/>
</Shell>
