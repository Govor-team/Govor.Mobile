<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:markdown="clr-namespace:Indiko.Maui.Controls.Markdown;assembly=Indiko.Maui.Controls.Markdown">
    <Style x:Key="DefaultMarkdownStyle"
           TargetType="markdown:MarkdownView">

        <Setter Property="LineBreakModeText" Value="WordWrap" />
        <Setter Property="LineBreakModeHeader" Value="WordWrap" />

        <Setter Property="DefaultImageHeight" Value="100" />
        <Setter Property="DefaultImageWidth" Value="100" />

        <Setter Property="TextColor" Value="#D0FFFFFF" />
        <Setter Property="TextFontSize" Value="14" />

        <Setter Property="H1FontSize" Value="22" />
        <Setter Property="H2FontSize" Value="18" />
        <Setter Property="H3FontSize" Value="16" />

        <Setter Property="H1Color" Value="#6B50ED" />
        <Setter Property="H2Color" Value="#727BE2" />
        <Setter Property="H3Color" Value="#DFDFDFFF" />

        <Setter Property="CodeBlockFontSize" Value="13" />
        <Setter Property="CodeBlockTextColor" Value="#DFDFDFFF" />
        <Setter Property="CodeBlockBackgroundColor" Value="#353b4d" />

        <Setter Property="BlockQuoteBackgroundColor" Value="Bisque" />
        <Setter Property="LineHeightMultiplier" Value="1.1" />
        <Setter Property="HyperlinkColor" Value="#917EEC" />

    </Style>
</ResourceDictionary>