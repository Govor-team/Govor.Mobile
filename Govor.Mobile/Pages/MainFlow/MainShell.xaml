<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Govor.Mobile.Pages.MainFlow.MainShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Govor.Mobile.Pages.MainFlow"
    Title="Main"
    Shell.FlyoutBehavior="Disabled"
    IsVisible="True"
    Shell.NavBarIsVisible="False"
    Shell.NavBarVisibilityAnimationEnabled="False"
    BackgroundImageSource="{DynamicResource CurrentBackground}"
    BackgroundColor="Transparent"
    Shell.PresentationMode="ModalNotAnimated"
    Shell.TabBarBackgroundColor="Yellow"
    TabBarIsVisible="True"
    Shell.NavBarHasShadow="False">
    
    <TabBar>
        <ShellContent 
            Title="Chats"
            Route="MainPage" 
            Icon="chat_icon.png"
            ContentTemplate="{DataTemplate pages:MainPage}" />

        <ShellContent 
            Title="Friends"
            Route="FriendsSearchPage"
            Icon="friends_icon.png"
            ContentTemplate="{DataTemplate pages:FriendsSearchPage}"/>
        
        <ShellContent 
            Title="Friends"
            Route="FriendsSearchPage"
            Icon="call_icon.png"
            ContentTemplate="{DataTemplate pages:CallPage}"/>
    </TabBar>
</Shell>
